{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@components/*": ["components/*", "components/*/index", "components/index"],
      "@lib/*": ["lib/*"],
      "@styles/*": ["styles/*"],
      "@typograph/*": ["typograph/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "./src/@types",
    "global.d.ts"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/typograph/**/*.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
