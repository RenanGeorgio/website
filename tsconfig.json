{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext", "es2020"],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@components/*": ["components/*", "components/*/index", "components/index"],
      "@lib/*": ["lib/*"],
      "@styles/*": ["styles/*"],
      "@hooks/*": ["lib/hooks/*"],
      "@assets/*": ["assets/*"],
      "@data/*": ["data/*"],
      "@interfaces": ["typograph/interfaces/index"],
      "@types": ["typograph/types/index"]
    },
    "incremental": true
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts",  "global.d.ts", "**/*.ts", "**/*.tsx", "**/*.js"],
  "typeRoots": [
    "node_modules/@types",
    "src/typograph/**/*.ts"
  ]
}
