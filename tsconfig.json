{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2020",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "paths": {
      "@components/*": [
        "components/*",
        "components/*/index",
        "components/index"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@typograph/*": [
        "typograph/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@views/*": [
        "views/*"
      ],
      "@data/*": [
        "data/*"
      ],
      "@studio/*": [
        "studio/*"
      ]
    },
    "incremental": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "src",
    "global.d.ts",
    "**/*.ts", 
    "**/*.tsx", 
    "**/*.js"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/typograph/**/*.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}